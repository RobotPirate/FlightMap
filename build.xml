<?xml version = "1.0"?>
<project name="Flights" basedir="." default="compile">
	
	<target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Flights.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="Project1.Flights"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/.jar" fork="true"/>
    </target>

</project>